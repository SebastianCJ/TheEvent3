<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/comentarioLayout"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoria 1"
        android:visibility="visible"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/tituloCat"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/myImageView"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@color/timelineblue" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desclayoutComentario"
        android:clipToPadding="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ceremonia Religiosa"
            android:textSize="15sp"
            android:textColor="@color/silver2"
            android:id="@+id/nombrePerfilComentario"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="115dp"
            android:layout_marginStart="115dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="1dp"
            android:textColor="@color/black21"
            android:id="@+id/descripcionTxt"
            android:textSize="12sp"
            android:layout_below="@id/nombrePerfilComentario"
            android:layout_marginLeft="115dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icondestinos"
            android:layout_below="@id/descripcionTxt"
            android:gravity="center"
            android:layout_marginLeft="115dp"
            android:layout_marginStart="115dp"
            android:id="@+id/imageView" />
        <TextView
            android:id="@+id/direccionTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Rancho los amigos, valle de Guadalupe, Ensenada Baja California."
            android:textColor="@color/silver"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/imgseparador"
        android:layout_below="@id/myImageView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/vertblack"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_more_vert_black_48dp"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/desclayoutComentario"
        android:layout_centerHorizontal="true" />

</RelativeLayout>